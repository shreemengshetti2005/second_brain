# App Settings
ENVIRONMENT=local
DEBUG=true

# Database (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/secondbrain

# Cloud SQL Connection (Show capability, not used in demo)
USE_CLOUD_SQL=false
CLOUD_SQL_CONNECTION_NAME=project-id:region:instance-name
CLOUD_SQL_DATABASE_URL=postgresql://user:pass@/dbname?host=/cloudsql/project-id:region:instance-name

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Google Speech-to-Text API
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Google Drive API
GDRIVE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GDRIVE_CLIENT_SECRET=your_client_secret
GDRIVE_REDIRECT_URI=http://localhost:8000/api/gdrive/callback
GDRIVE_FOLDER_ID=

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Local Storage
LOCAL_AUDIO_DIR=./data/audio
LOCAL_EXPORT_DIR=./data/exports
CHROMA_PERSIST_DIR=./data/vector_db

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2